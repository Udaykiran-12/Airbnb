<% layout("/layouts/boilerplate") %>

<div class="row">
  <h1 class="col-6 offset-3 mb-3 mt-3">SignUp To WanderLust</h1>
  <div class="col-6 offset-3">
    <form class="needs-validation" novalidate method="post" action="/signUp">
      <div class="mb-3 mt-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          name="username"
          class="form-control"
          id="username"
          required
        />
        <div class="valid-feedback">looks good</div>
        <div class="invalid-feedback">Please Enter Valid Username</div>
      </div>

      <div class="mb-3 mt-3">
        <label for="email" class="form-label">Email</label>
        <input
          type="email"
          name="email"
          class="form-control"
          id="email"
          required
        />
      </div>

      <div class="mb-3 mt-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          class="form-control"
          id="password"
          required
        />
      </div>

      <button class="btn btn-success"> Sign Up</button>
    </form>
  </div>
</div>
