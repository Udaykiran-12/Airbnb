<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-8 offset-2">
    <h2 class="h2">Create a New Listing :</h2>
    <br />
    <form
      method="post"
      action="/listings"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="listing[title]"
          class="form-control"
          placeholder="Add a Catchy Title"
          required
        />
        <div class="valid-feedback">Title looks good</div>
        <div class="invalid-feedback">Please Enter Valid Title</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          rows="10"
          cols="50"
          class="form-control"
          required
        ></textarea>
        <div class="valid-feedback">Description looks good</div>
        <div class="invalid-feedback">Description should be short</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload Listing Image </label>
        <input
          type="file"
          name="listing[image]"
          class="form-control"
          required
        />
      </div>
      

   

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            type="number"
            name="listing[price]"
            class="form-control"
            placeholder="1200"
            required
          />
          <div class="valid-feedback">Price looks good</div>
          <div class="invalid-feedback">Please Enter Valid Price</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            name="listing[location]"
            class="form-control"
            placeholder="Surat , Gujarat "
            required
          />
          <div class="valid-feedback">Location looks good</div>
          <div class="invalid-feedback">Please Enter Valid Location</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input
          type="text"
          name="listing[country]"
          class="form-control"
          placeholder="India"
          required
        />
        <div class="valid-feedback">Country name looks good</div>
        <div class="invalid-feedback">Please Enter Valid Country name</div>
        <br /><br />
      </div>

      <button class="btn btn-dark add-btn mb-3">Add</button>
    </form>
  </div>
</div>
